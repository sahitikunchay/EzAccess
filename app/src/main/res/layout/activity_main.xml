<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.dell.blr.ezaccess.MainActivity">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"
            android:text="Title"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edTitle"
            style="@style/Base.V7.Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.35"
            android:background="@drawable/borderet"
            android:fadingEdge="horizontal"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"
            android:text="Project"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.175"
            android:background="@drawable/borderet"
            android:gravity="top"
            android:inputType="textImeMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Platform"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Time"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edPlatform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/borderet"
                android:inputType="text"
                android:maxLength="15" />

            <EditText
                android:id="@+id/edClarityID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/borderet"
                android:inputType="number"
                android:maxLength="15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.075"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEnv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center_vertical"
                android:text="Enviromnent"
                android:textAlignment="center"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:focusableInTouchMode="true"/>

            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvDEV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="DEV"
                android:textAlignment="center"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSTG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="STG"
                android:textAlignment="center"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvOTH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="OTHER"
                android:textAlignment="center"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.075"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Severity"
                android:textColor="@color/primaryText"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="popDialog"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/tvSEV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="SEV2"
                android:textSize="18sp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvSEV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="SEV3"
                android:textSize="18sp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvSEV4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="SEV4"
                android:textSize="18sp"
                android:padding="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.075"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDomain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Domain"
                android:textColor="@color/primaryText"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvEBI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="EBIA"
                android:textSize="18sp" android:padding="4dp"/>

            <TextView
                android:id="@+id/tvNEBI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="NON EBIA"
                android:textSize="18sp"
                android:padding="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/lightPrimaryColor"
            android:elevation="50dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Submit"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
